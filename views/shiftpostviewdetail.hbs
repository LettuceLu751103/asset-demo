<div class="row">
    <div class="col">
        <div class="card w-100 mt-3">
            <div class="card-header">
                {{shiftpost.posttitle}} - {{shiftpost.Shift.name}} - 交班事項
            </div>
            <div class="card-body">
                {{{shiftpost.postcontent}}}
            </div>

            <div class="card-footer">
                <div class="col-6">
                    <small class="text-muted"> 值班人: {{shiftpost.poster}}</small>
                </div>
                <div class="col-6">
                    <small class="text-muted"> 發布時間: {{shiftpost.createdAt}}</small>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mt-3 mb-5">
    <div class="col-6">
        <a class="btn btn-outline-success btn-block" href="/shiftpost/{{shiftpost.id}}/update">修改</a>
    </div>
    <div class="col-6">
        <a class="btn btn-outline-danger btn-block" href="/shiftpost">返回</a>
    </div>
</div>