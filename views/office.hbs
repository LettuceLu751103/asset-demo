<div class="container">
    <div class="row align-items-center">
        <nav class="nav  nav-tabs">
            <a class="nav-link" href="/">首頁</a>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button"
                    aria-expanded="false">資產相關</a>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="/categories">資產類別</a>
                    <a class="dropdown-item active" href="/offices">辦公室類別</a>
                    <a class="dropdown-item" href="/officeAssets">辦公室資產</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#">Separated link</a>
                </div>
            </li>
            <a class="nav-link" href="/gatepass">GatePass</a>
            <a class="nav-link" href="/shiftpost">交班日誌</a>
            <a class="nav-link" href="/bulletin">公告欄</a>
        </nav>
        <div class="row mt-3">
            <div class="col-6">
                <div class="h2">辦公室類別</div>
            </div>
            <div class="col-6">
                <a href='/createOffice'>
                    <button type="button" class="btn btn-success">新增辦公室</button>
                </a>
            </div>
        </div>

        <table class="table table-hover mt-3">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each offices}}
                <tr>
                    <th scope="row">{{this.id}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.Description}}</td>
                    <td>
                        <button type="button" class="btn btn-link">
                            <a class="btn btn-link link-primary" href="/editOffices/{{this.id}}">
                                Edit
                            </a>
                        </button>

                        <form action="/deleteOffice/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
                            <button type="submit" class="btn btn-link link-danger">Delete</button>
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>